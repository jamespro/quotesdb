        <![endif]-->
        <section>
            <h1>Quotes</h1>
        <form action="/quotes" method="POST">
            <input type="text" placeholder="name" name="name">
            <input type="text" placeholder="quote" name="quote">
            <button type="submit">Submit</button>
        </form>
    </section>
    <section>
        <ul>
            <% for(var i=0; i < quotes.length; i++) {%>
                <li class="quote">
                    <%=quotes[i].name %> - 
                    <%=quotes[i].quote %>
                </li>
                <% } %>
            </ul>
        </section>
        <section>
            <h2>Update</h2>
            <p>
                Replace first quote with another quote written by Darth Vader
            </p>
            <button id="update-button">Replace quote</button>
        </section>
        <section>
        <h2>Delete</h2>
        <p>Delete one default quote.</p>
        <button id="delete-button">Delete one default quote</button>
        <div id="deleteMessage"></div>
        </section>

        
        <script src="/main.js" async defer></script>
    </body>
    
</html>